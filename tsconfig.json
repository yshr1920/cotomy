{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}